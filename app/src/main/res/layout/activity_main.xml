<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number1EeditText"
        android:layout_width="411dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/number2EeditText"
        android:layout_width="413dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/number1EeditText"
        tools:layout_editor_absoluteX="-2dp" />

    <Button
        android:id="@+id/calcSumBatton"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:text="Посчитать сумму"
        app:layout_constraintTop_toBottomOf="@+id/number2EeditText"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/ResultTextView"
        android:layout_width="402dp"
        android:layout_height="49dp"
        app:layout_constraintTop_toBottomOf="@+id/calcSumBatton"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>